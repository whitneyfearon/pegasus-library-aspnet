

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Pegasus Bookstore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/fontawesome/fontawesome-free-5.12.0-web/css/all.css" rel="stylesheet" />
    <link href="~\lib\tailwind.min.css" rel="stylesheet" />
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.1.2/tailwind.min.css'>
</head>
<body translate="no">
    <section class="flex  md:flex-row h-screen items-center">
        <div class="bg-blue-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
            @*<img alt="Pegasus Bookstore" src="~\images\library.jpg" class="w-full h-full object-cover">*@
            <img alt="Pegasus Bookstore" src="~/images/slide3.jpg" class="w-full h-full object-cover" />
        </div>
        <div class="bg-green-100 w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">
            <div class="w-full h-100">                
                <div class="mt-6">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <p class="text-sm text-gray-500 pt-16 mt-16">&copy; 2020 - Pegasus Bookstore - All Rights Reserved.</p>
            </div>
        </div>
    </section>
    <script src="~/lib/fontawesome/fontawesome-free-5.12.0-web/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
