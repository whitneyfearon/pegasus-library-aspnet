@model pegasus_library_aspnet.Models.Book

@{
    ViewData["Title"] = "Delete";
}

    <div class="card w-50 border-0 pt-3">
        <div class="card-header border alert-success">
            Are you sure you want to delete this Book?
        </div>
        <div class="card-body">
            <div class="pb-4">
                <h4 class="color-change">@Html.DisplayFor(model => model.Title)</h4>
                by: <i class="green-text">@Html.DisplayFor(model => model.Author.FirstName) @Html.DisplayFor(model => model.Author.LastName) </i>
            </div>
            <div class="text-center pb-4">
                <img src="~/images/@Html.DisplayFor(model => model.ImagePath)" />
            </div>
            <dl class="row">
                <dd class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ISBN)
                </dd>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.ISBN)
                </dd>
                <dd class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Title)
                </dd>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dd class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Genre)
                </dd>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Genre.GenreName)
                </dd>
                <dd class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PublicationDate)
                </dd>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.PublicationDate)
                </dd>
                <dd class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dd>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dd class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Description)
                </dd>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Description)
                </dd>

            </dl>
        </div>
        <div class="card-footer alert-success">
            <div class="row">
                <div class="form-group col">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Book?');" />
                    </form>
                </div>
                <div class="col-6 text-right">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>