<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <title>@ViewData["Title"] - Pegasus Bookstore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/fontawesome/fontawesome-free-5.12.0-web/css/all.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm login" style="background-color: #264476 !important">
            <div class="container">
                <partial name="_LoginPartial" />
            </div>
        </nav>
        <nav class="alert-success navbar navbar-expand-md navbar-light container-fluid flex-md-column align-items-md-start text-center">
            <div class="container justify-content-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" />
                </a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar5">
                <span class="navbar-toggler-icon border-success"></span>
            </button>
            <div class="container border-container text-center">
                <div class="navbar-collapse collapse justify-content-center " id="navbar5">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link links" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link links" asp-area="" asp-controller="Books" asp-action="Index">BOOKS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link links" asp-area="" asp-controller="Authors" asp-action="Index">AUTHORS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link links" asp-area="" asp-controller="Genres" asp-action="Index">GENRES</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link links" asp-area="" asp-controller="Contact" asp-action="Index">CONTACT US</a>
                        </li>*@
                        @*<li class="nav-item">
            <a class="nav-link links" asp-area="" asp-controller="Home" asp-action="Privacy">PRIVACY</a>
        </li>*@
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Pegasus Bookstore - All Rights Reserved. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/fontawesome/fontawesome-free-5.12.0-web/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
