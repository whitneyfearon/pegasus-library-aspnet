@model pegasus_library_aspnet.Models.Genre

@{
    ViewData["Title"] = "Delete";
}

    <div class="card w-50 border-0 pt-3">
        <div class="card-header border alert-success">
            Are you sure you want to delete this Genre?
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GenreName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GenreName)
                </dd>
            </dl>
        </div>

        <div class="card-footer alert-success">
            <div class="row">
                <div class="form-group col">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Genre?');" />
                    </form>
                </div>
                <div class="col-6 text-right">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
